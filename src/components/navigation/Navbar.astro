---
import NavDropdown from "./NavDropdown.astro";
import { dropdowns } from "./dropdowns";
---

<div class="w-full navbar bg-base-300">
    <div class="flex-1 px-2 mx-2">
        <a class="btn btn-ghost normal-case text-xl" href="/">Istrail Lab</a>
    </div>
    <div class="flex-none lg:hidden">
        <label for="nav-drawer" class="btn btn-square btn-ghost">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="inline-block w-6 h-6 stroke-current"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path></svg
            >
        </label>
    </div>
    <div class="flex-none hidden lg:block">
        <ul class="menu menu-horizontal px-1">
            <li>
                <a href="/sorin-istrail">Sorin Istrail</a>
            </li>
            {dropdowns.map((dropdown) => <NavDropdown {...dropdown} />)}
            <li>
                <a href="/essays">Essays</a>
            </li>
            <li>
                <a href="/publications">Publications</a>
            </li>
        </ul>
    </div>
</div>
