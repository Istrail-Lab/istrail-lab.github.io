---
export interface Props {
    title: string;
}

const { title } = Astro.props;

import Navbar from "../components/navigation/Navbar.astro";
import Sidebar from "../components/navigation/Sidebar.astro";
import Footer from "../components/navigation/Footer.astro";
import "../styles/globals.css";
---

<!DOCTYPE html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Istrail Lab | {title}</title>
    </head>
    <body class="drawer drawer-end h-full">
        <input id="nav-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
            <Navbar />
            <div class="flex-1">
                <main
                    style="max-width: min(100ch, 100% - 4rem)"
                    class="mx-auto"
                >
                    <h2 class="text-3xl font-bold pt-4">{title}</h2>
                    <h3 class="text-2xl font-bold py-8">Research Summary</h3>
                    <slot name="abstract" />

                    <slot name="quote" />

                    <h3 class="text-2xl font-bold py-8">Relevant Papers</h3>
                    <slot name="relevant-papers" />
                </main>
            </div>
        </div>
        <Footer />
    </body>
    <div class="drawer-side">
        <label for="nav-drawer" class="drawer-overlay"></label>
        <Sidebar />
    </div>
</html>
